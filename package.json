{
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:fe\" \"npm:dev:api\"",
    "dev:fe": "nuxi dev",
    "dev:api": "nest start --debug --watch",
    "build": "nest build && nuxi build",
    "build:frontend": "nuxi build",
    "build:api": "nest build",
    "start": "node .output/server/index.mjs",
    "lint:js": "eslint --ext \".ts,.js,.vue\" --ignore-path .gitignore .",
    "lint": "npm run lint:js",
    "format": "prettier --write \"api/**/*.ts\" \"frontend/**/*.(js|ts|vue)\"",
    "test": "npm run test:client && npm run test:server && npm run test:e2e",
    "test:client": "jest",
    "test:server": "jest --config ./jest-api.config.js",
    "test:e2e": "jest --config ./api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@quasar/extras": "^1.11.3",
    "nuxt3": "latest",
    "quasar": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@quasar/vite-plugin": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^7.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "sass": "1.32.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "volta": {
    "node": "14.16.0"
  }
}
